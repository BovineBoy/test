.base-loading-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100px;
  height: 35px;
  text-align: center;
  background: #ccc;
  border-radius: 5px;
  z-index: 200;
}
.base-loading-container .base-loading .loading-text {
  color: #fff;
}

