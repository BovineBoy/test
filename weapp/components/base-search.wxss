.van-search {
  display: block;
  width: 100%;
}
.base-search-container {
  width: 100%;
  height: 34px;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  color: #323233;
  padding: 0 10px;
}
.base-search-container .search-wrapper {
  flex: 2;
  box-sizing: border-box;
  align-items: center;
  height: 34px;
  padding: 2px 0;
  display: flex;
  background: #f7f8fa;
}
.base-search-container label {
  font-size: 14px;
  letter-spacing: 0.2px;
}
.base-search-container input {
  flex: 2;
  padding-left: 30px;
  font-size: 14px;
  border-radius: 3px;
}
.base-search-container .action-btn {
  margin-left: 10px;
  text-align: center;
  display: block;
}

