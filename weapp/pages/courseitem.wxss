#toast {
  text-align: center;
}
.container .top-video-container {
  width: 100%;
  height: 200px;
}
.container .top-video-container .top-video {
  width: 100%;
  height: 200px;
}
.container .tab-item {
  font-size: 14px;
}
.container .course-details {
  padding: 15px;
}
.container .course-details .course-info .course-title {
  font-size: 14px;
  line-height: 25px;
  font-weight: 600;
}
.container .course-details .course-info .play-time,
.container .course-details .course-info .course-desc {
  font-size: 12px;
  line-height: 25px;
  color: #999;
}
.container .course-details .course-info .course-rate {
  display: flex;
  align-items: center;
}
.container .course-details .course-info .play-time {
  margin-left: 10px;
}
.container .info-img-container {
  margin-bottom: 40px;
}
.container .info-img-container .info-img {
  width: 100%;
}
.container .teacher-info {
  padding: 10px 15px;
}
.container .teacher-info .title {
  font-size: 14px;
  font-weight: 600;
  margin-bottom: 10px;
}
.container .teacher-info .info {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}
.container .teacher-info .info .teacher-img {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
}
.container .teacher-info .info .right-bar {
  font-size: 14px;
  line-height: 20px;
  flex: 1 1;
}
.container .teacher-info .info .right-bar .job {
  font-size: 12px;
}
.container .teacher-info .info .icon {
  color: #333;
}
.container .comment-list {
  padding: 10px 15px;
}
.container .comment-list .title {
  font-size: 14px;
  font-weight: 600;
  margin-bottom: 10px;
}
.container .comment-list .comment-item {
  padding: 10px 0;
}
.container .comment-list .comment-item .info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
}
.container .comment-list .comment-item .content {
  line-height: 20px;
  font-size: 12px;
  color: #333;
}
.container .comment-list .comment-item .rate {
  margin-top: 10px;
}
.container .purchase-btn-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 40px;
}
.container .purchase-btn-container .purchase-btn {
  border-radius: 25px;
}
.container .course-selections {
  padding: 10px;
  border-top: 5px solid #ececec;
}
.container .course-selections .title-bar {
  display: flex;
  justify-content: space-between;
  padding-bottom: 10px;
}
.container .course-selections .title-bar .right-bar {
  font-size: 12px;
  letter-spacing: 0.2px;
  color: #ff976a;
}
.container .course-selections .selections .sel-item {
  padding: 10px 0;
}
.container .course-selections .selections .sel-item .top-bar {
  line-height: 25px;
  font-size: 12px;
  color: #444;
}
.container .course-selections .selections .sel-item .top-bar .tag {
  margin-right: 3px;
}
.container .course-selections .selections .sel-item .bottom-bar {
  height: 25px;
  display: flex;
  justify-content: space-between;
  font-size: 12px;
}
.container .course-selections .selections .sel-item .bottom-bar .left-bar,
.container .course-selections .selections .sel-item .bottom-bar .right-bar {
  display: inline-flex;
  align-items: center;
}
.container .course-selections .selections .sel-item .bottom-bar .left-bar .icon,
.container .course-selections .selections .sel-item .bottom-bar .right-bar .icon {
  margin-right: 3px;
}
.container .course-selections .selections .sel-item .bottom-bar .left-bar {
  color: #999;
}
.container .course-selections .selections .sel-item .bottom-bar .right-bar {
  color: #ff976a;
}

