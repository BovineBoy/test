.container .top-bar {
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  height: 150px;
}
.container .top-bar .teacher-img {
  width: 60px;
  height: 60px;
  border-radius: 50%;
}
.container .course-list {
  padding: 15px 20px 40px 20px;
  background: #f7f7f7;
}
.container .course-list .course-item {
  background: #fff;
  padding: 10px;
  margin-bottom: 20px;
  box-shadow: 0 8px 12px #ebedf0;
  display: flex;
  align-items: center;
}
.container .course-list .course-item .img {
  width: 60px;
  height: 80px;
}
.container .course-list .course-item .right-bar {
  margin-left: 20px;
}
.container .course-list .course-item .right-bar .title {
  font-size: 12px;
  color: #333;
  font-weight: 400;
}
.container .course-list .course-item .right-bar .price {
  margin-top: 15px;
  font-size: 11px;
  color: red;
}
.container .desc-container {
  padding: 15px 20px;
  text-indent: 2em;
  font-size: 12px;
  letter-spacing: 0.5px;
  color: #333;
  font-weight: 400;
  line-height: 25px;
}

