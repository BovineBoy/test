.container {
  padding: 0 10px;
}
.container .personal-data {
  display: flex;
  align-items: center;
  padding: 15px 0;
}
.container .personal-data .avatar-container .avatar {
  width: 60px;
  height: 60px;
  overflow: hidden;
  border-radius: 50%;
  margin-right: 10px;
}
.container .personal-data .username {
  font-size: 16px;
  letter-spacing: 0.2px;
}
.container .submit-btn {
  display: block;
  margin-top: 10px;
  width: 100%;
}

