.container .personal-data {
  box-sizing: border-box;
  height: 150px;
  padding: 30px 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 5px solid #ccc;
}
.container .personal-data .avatar-container .avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  overflow: hidden;
}
.container .personal-data .username {
  font-size: 16px;
  letter-spacing: 0.2px;
}
.container .operation-list .ope-item {
  display: flex;
  align-items: center;
  height: 60px;
  line-height: 60px;
  padding: 0 10px;
}
.container .operation-list .ope-item .icon {
  font-size: 20px;
  margin-right: 10px;
}
.container .operation-list .ope-item > label {
  flex: 1 1;
  font-size: 14px;
}

